<!meta>
meta.include(meta) * Move the meta functions into global scope.

obj(<pos>) -> {
	let(<x>) -> 0
	let(<y>) -> 0
}
fn(<person>) -> {
	let(<name>) -> param(0)
	return(self)
}

obj(<abc>) -> dispatcher -> {
	include(pos)
	event("explosion")

	fn(<explode>) -> bind(<x>, <y>) -> {
		set(param(0)) -> rand(-2, 3)
		set(param(1)) -> rand(-2, 3)
		emit("explosion")
	}
}

obj(<player>) -> {
	include(pos)
	include(person("Geon"))
}

abc.on("explosion") -> {
	print(add(str(abc.x), ", ", str(abc.y)))
	print(player.name)
}
abc.explode()