print(" == Counting Loops")
fn(<counter>) -> {
	if(exists(param(0))) -> {
		set(param(0)) -> add(num(query(param(0))), 1)
	} else -> {
		let(param(0)) -> 0
	}
	yield()
}

repeat(3) -> counter(<i>) -> {
	print(add("index: ", str(i)))
} del(<i>)

print("") print(" == Match statements")
fn(<matchVal>) -> {
	print(add("matching ", str(param(0))))
	print(match(param(0)) -> {
		case("abe") -> {
			return("OMG, abe!")
		}
		case("jenny") -> {
			return("OMG, jenny!")
		}
		default -> {
			return("Unkown person")
		}
	})
}

matchVal("abe")
matchVal("joe")
matchVal("jenny")

